<UserControl x:Class="Constructions_Chenyshkov2.Elements.Student"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Constructions_Chenyshkov2.Elements"
             mc:Ignorable="d" >
    
    <Grid Height="50" Margin="0,0,0,10" Background="#35363A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Effect>
            <DropShadowEffect
                Color="Black" 
                Direction="315"
                Opacity="0.7"
                RenderingBias="Performance"
                BlurRadius="5"/>
        </Grid.Effect>
        
        <Image Height="30" Width="30" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="UniformToFill" Margin="10" Source="/Images/ic_user.png"/>
        <Label x:Name="tbf10"
               Content=""
               VerticalContentAlignment="Center"
               Margin="10"
               Grid.Column="1"
               Foreground="white"
               FontSize="14"/>
        <Label x:Name="tbfSchoolarship"
               Content=""
               VerticalContentAlignment="Center"
               Margin="10"
               Grid.Column="2"
               Foreground="white"
               FontSize="14"/>
        <Label x:Name="tbfCourse"
               Content=""
               VerticalContentAlignment="Center"
               Margin="10"
               Grid.Column="3"
               Foreground="white"
               FontSize="14"/>

    </Grid>
</UserControl>
